<Window x:Class="Homework6WithGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Homework6WithGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="counterLabel" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-150,0,0"/>
        <Button x:Name="subtractButton" Content="Subtract" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75" Margin="-200,0,0,0" Click="subtractButton_Click"/>
        <Button x:Name="resetButton" Content="Reset" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75" Margin="0,0,0,0" Click="resetButton_Click"/>
        <Button x:Name="addButton" Content="Add" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75" Margin="200,0,0,0" Click="addButton_Click"/>

    </Grid>
</Window>
